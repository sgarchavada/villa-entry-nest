generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Villa {
  id Int @default(autoincrement()) @id
  name String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  price Float
  sale Boolean @default(false)
  availibilty Availibilty
  address String
  mapUrl String
  photos Json
  phone String
  amenities Json
  description String
  reviews Review[]
}

model Review {
  id Int @default(autoincrement()) @id
  title String
  content String
  rating Int
  villa Villa @relation(fields: [villaId], references: [id])
  villaId Int 
}

enum Availibilty {
  AVAILABLE
  NOT_AVAILABLE
}